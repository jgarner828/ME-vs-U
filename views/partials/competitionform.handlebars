<div>
  <h3 class="text-primary">Create a New Competition:</h3>
  <form id="competitionform">
    <div>
      <label class="text-primary" for="title">Title: </label>
      <input id="title" name="title" />
    </div>
    <div>
      <label class="text-primary" for="category">Category: </label>
      <input id="category" name="category" />
    </div>
    <div>
      <label class="text-primary" for="description"> Description: </label>
      <input id="description" name="description" />
    </div>
    <div>
      <label class="text-primary" for="duration">Duration: </label>
      <input type="number" id="duration" name="duration" />
    </div>
    <div>
      <label class="text-primary" for="reward">Reward: </label>
      <input id="reward" name="reward" />
    </div>
    <div>
      <label class="text-primary" for="quantity">Quantity: </label>
      <input type="number" id="quantity" name="quantity" />
    </div>
    <div>
      <label class="text-primary" for="uom">Unit of Measurement: </label>
      <input id="uom" name="uom" />
    </div>
    <div>
      <label class="text-primary" for="ispublic">Public: </label>
      <input type="checkbox" id="ispublic" name="ispublic" />
    </div>
    <div>
 <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
</div>

<script src="/js/createCompetition.js"></script>
