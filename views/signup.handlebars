<section class="gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem">
          <div class="card-body p-5 text-center">
            <div class="mb-md-5 mt-md-4 pb-5">
              <h2 class="fw-bold mb-2 text-uppercase">Create User</h2>
              <p class="text-white-75 mb-5">
               Please enter your new username, e-mail, and password
              </p>
                <div class="form-outline form-white mb-4">
                <input
                  type="email"
                  id="newUsername"
                  class="form-control form-control-lg"
                />
                <label class="form-label" for="typeEmailX">New Username</label>
              </div>
              <div class="form-outline form-white mb-4">
                <input
                  type="email"
                  id="newEmail"
                  class="form-control form-control-lg"
                />
                <label class="form-label" for="typeEmailX">New Email</label>
              </div>

              <div class="form-outline form-white mb-4">
                <input
                  type="password"
                  id="newPassword"
                  class="form-control form-control-lg"
                />
                <label class="form-label" for="typePasswordX">Please enter your password</label>
              </div>
                 <div class="form-outline form-white mb-4">
                <input
                  type="password"
                  id="newPassword2"
                  class="form-control form-control-lg"
                />
                <label class="form-label" for="typePasswordX">Enter your password again</label>
              </div>

              <button
                id="createUserbutton"
                class="btn btn-outline-light btn-lg px-5"
                type="submit"
              >
                Create User
              </button>

              <div class="d-flex justify-content-center text-center mt-4 pt-1">
                <a href="#!" class="text-white"><i
                    class="fab fa-facebook-f fa-lg"
                  ></i></a>
                <a href="#!" class="text-white"><i
                    class="fab fa-twitter fa-lg mx-4 px-2"
                  ></i></a>
                <a href="#!" class="text-white"><i
                    class="fab fa-google fa-lg"
                  ></i></a>
              </div>
            </div>
